<p id="notice"><%= notice %></p>


<h1>Candidates</h1>

<% if current_user %>
  <%= link_to 'Je Vote', candidates_path %>
<% else %>
  <%= link_to 'Connexion', new_session_path %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Affiliation</th>
      <th>Photo</th>
      <th>Descriptif</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.nom %></td>
        <td><%= candidate.prenom %></td>
        <td><%= candidate.affiliation %></td>
        <td><%= candidate.photo %></td>
        <td><%= candidate.descriptif %></td>
        <td><%= link_to 'Show', candidate_path(candidate) %></td>
      </tr>
    <% end %>
  </tbody>


</table>
