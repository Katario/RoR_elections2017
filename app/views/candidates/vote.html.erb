<p id="notice"><%= notice %></p>


<h1>Choisissez vos votes</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Affiliation</th>
      <th>Photo</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.nom %></td>
        <td><%= candidate.prenom %></td>
        <td><%= candidate.affiliation %></td>
        <td><%= candidate.photo %></td>
        <td>
        <%= form_for :vote, :url => {:action=>"create", :controller=>"votes"} do |f| %>
        <div class="field">
        <%= f.hidden_field :id_candidate, :value=> candidate.id  %>
        </div>
        <div class="field">
        <%= f.hidden_field :code_postal, :value=> current_user.postal %>
        </div>
        <div class="field">
        <%= f.hidden_field :bureau_de_vote, :value=> current_user.bureau %>
        </div>
        <div class="field">
        <%= f.hidden_field :id_tour, :value=> cookies[:tour] %>
        </div>
        <div class="actions">
        <%= f.submit %>
        </div>
                <% end %>
          </td>
        <td><%= link_to 'Voir les détails du candidat', candidate_path(candidate) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Retour à la page d\'accueil', candidates_path %>