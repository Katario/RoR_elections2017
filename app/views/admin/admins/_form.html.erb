      <h2><%= pluralize(@admin.errors.count, "error") %> a empech√© cet enregistrement car :</h2>
      <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
