<p id="notice"><%= notice %></p>

<h1>Liste des administrateurs</h1>

<table>
  <thead>
    <tr>
      <th>Identifiants</th>
      <th>Mot de passe</th>
      <th>Statut d'administrateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.login %></td>
        <td><%= admin.password %></td>
        <td><%= admin.statut %></td>
        <td><%= link_to 'Voir le compte', admin_admin_path(admin) %></td>
        <td><%= link_to 'Modifier le compte', edit_admin_admin_path(admin) %></td>
        <td><%= link_to 'Supprimer le compte', admin_admin_path(admin), method: :delete, data: { confirm: 'Etes-vous sur de vouloir supprimer ce compte ? Cette opération est irréversible.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Créer un nouveau compte', new_admin_admin_path %>
<%= link_to 'Retour', admin_connexions_path %>
